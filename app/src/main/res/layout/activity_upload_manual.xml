<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.upload.UploadManualActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/vp_upload_manual"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_gravity="right"
        android:layout_marginRight="24dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/indicator_0"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/item_dot_blue" />

        <ImageView
            android:id="@+id/indicator_1"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:layout_marginRight="8dp"
            android:background="@drawable/item_dot_gray" />

        <ImageView
            android:id="@+id/indicator_2"
            android:layout_width="7dp"
            android:layout_height="7dp"
            android:background="@drawable/item_dot_gray" />

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="39dp"
        android:layout_marginTop="117dp"
        android:src="@drawable/tv_upload_manual" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_next"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="24dp"
        android:background="@drawable/item_round_6dp"
        android:backgroundTint="#0d6fb8"
        android:fontFamily="@font/pretendard_semibold"
        android:text="시작하기"
        android:textColor="#ffffff"
        android:textSize="15sp" />

</FrameLayout>