<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".feature.detailpage.ManageBookActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="52dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_centerVertical="true"
            android:layout_marginLeft="8dp"
            android:src="@drawable/ic_arrow_left" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/pretendard_semibold"
            android:letterSpacing="-0.012"
            android:text="서로 대여 관리"
            android:textColor="#0c202b"
            android:textSize="16sp" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="440dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="12dp"
        android:orientation="vertical"
        android:layout_marginRight="20dp"
        android:background="@drawable/item_round_6dp_stroke_gray"
        android:elevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="28dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="15sp"
                    android:textColor="#717983"
                    android:text="소지자 책장"
                    android:fontFamily="@font/pretendard_regular"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="22sp"
                    android:fontFamily="@font/pretendard_bold"
                    android:textColor="#11202a"
                    android:text="박준하"/>

            </LinearLayout>

            <View
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_profile_default"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="24dp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1.5dp"
            android:layerType="software"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="24dp"
            android:src="@drawable/item_dash_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="24dp"
            android:orientation="vertical"
            android:layout_marginRight="24dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내가 대여해준 도서"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="15sp"
                android:layout_marginTop="35dp"
                android:textColor="#717983"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#172a34"
                android:textSize="15sp"
                android:fontFamily="@font/pretendard_medium"
                android:text="네트워크 해킹과 보안"
                android:layout_marginBottom="28dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="내가 대여받은 도서"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="15sp"
                android:textColor="#717983"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#172a34"
                android:textSize="15sp"
                android:fontFamily="@font/pretendard_medium"
                android:text="변하는 것과 변하지 않는 것"
                android:layout_marginBottom="28dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="후기 요청"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="15sp"
                android:textColor="#717983"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#172a34"
                android:textSize="15sp"
                android:fontFamily="@font/pretendard_medium"
                android:text="가장 인상 깊은 문구"
                android:layout_marginBottom="28dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="만기일"
                android:fontFamily="@font/pretendard_regular"
                android:textSize="15sp"
                android:textColor="#717983"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#172a34"
                android:textSize="15sp"
                android:fontFamily="@font/pretendard_medium"
                android:text="2022년 6월 1일 (7일 대여)"
                android:layout_marginBottom="40dp"/>
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/item_round_6dp"
        android:backgroundTint="#f2f5f7"
        android:fontFamily="@font/pretendard_medium"
        android:text="소지자와 대화하기"
        android:textColor="#434b55"
        android:textSize="15sp"
        android:visibility="visible" />

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/item_round_6dp"
        android:backgroundTint="#0d6fb8"
        android:fontFamily="@font/pretendard_medium"
        android:text="첵 상태 변경하기"
        android:textColor="#ffffff"
        android:textSize="15sp" />

</LinearLayout>