<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#b6000000"
    tools:context=".feature.upload.UploadHintActivity">

    <FrameLayout
        android:layout_width="320dp"
        android:layout_height="475dp"
        android:layout_gravity="center"
        android:background="@drawable/item_round_10dp"
        android:orientation="vertical">

        <androidx.viewpager2.widget.ViewPager2
            android:id="@+id/vp_upload_hint"
            android:layout_width="320dp"
            android:layout_height="420dp"
            android:orientation="horizontal" />

        <ImageView
            android:id="@+id/btn_exit"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_gravity="right"
            android:layout_marginTop="13dp"
            android:layout_marginRight="13dp"
            android:src="@drawable/ic_exit_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="93dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/indicator_0"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/item_dot_blue" />

            <ImageView
                android:id="@+id/indicator_1"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:layout_marginRight="8dp"
                android:background="@drawable/item_dot_gray" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="55dp"
            android:background="#dcdee6" />

        <LinearLayout
            android:id="@+id/layout_do_not_show_again"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <CheckBox
                android:id="@+id/cb_do_not_show_again"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:background="@drawable/item_checkbox_round"
                android:button="@android:color/transparent" />

            <TextView
                android:id="@+id/tv_do_not_show_again"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/pretendard_regular"
                android:letterSpacing="-0.022"
                android:text="다시 보지 않기"
                android:textColor="#787878"
                android:textSize="15sp" />

        </LinearLayout>

    </FrameLayout>

</FrameLayout>