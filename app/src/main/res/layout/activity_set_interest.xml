        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <GridLayout
            android:id="@+id/layout_category"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:columnCount="4"
            android:orientation="horizontal"
            app:layout_constraintDimensionRatio="1:1"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/btn_category_1"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:padding="8dp"
                android:src="@drawable/ic_category_1_blank" />

            <ImageView
                android:id="@+id/btn_category_2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:padding="8dp"
                android:src="@drawable/ic_category_2_blank" />

            <ImageView
                android:id="@+id/btn_category_3"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:padding="8dp"
                android:src="@drawable/ic_category_3_blank" />

            <ImageView
                android:id="@+id/btn_category_4"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:padding="8dp"
                android:src="@drawable/ic_category_4_blank" />

            <ImageView
                android:id="@+id/btn_category_5"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:padding="8dp"
                android:src="@drawable/ic_category_5_blank" />

            <ImageView
                android:id="@+id/btn_category_6"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:padding="8dp"
                android:src="@drawable/ic_category_6_blank" />

            <ImageView
                android:id="@+id/btn_category_7"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:padding="8dp"
                android:src="@drawable/ic_category_7_blank" />

            <ImageView
                android:id="@+id/btn_category_8"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
